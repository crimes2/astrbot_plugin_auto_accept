{
    "title": "自动通过好友、群请求",
    "description": "自动处理QQ平台的好友请求和入群邀请，可配置接受或拒绝。",
    "type": "object",
    "properties": {
        "friend_request": {
            "type": "object",
            "title": "好友请求设置",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "title": "启用自动处理好友请求",
                    "default": false
                },
                "action": {
                    "type": "string",
                    "title": "处理方式",
                    "description": "accept (同意), reject (拒绝), ignore (忽略)",
                    "enum": ["accept", "reject", "ignore"],
                    "default": "ignore"
                }
            },
            "required": ["enabled", "action"]
        },
        "group_invite": {
            "type": "object",
            "title": "入群邀请/申请设置",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "title": "启用自动处理入群邀请/申请",
                    "default": false
                },
                "action": {
                    "type": "string",
                    "title": "处理方式",
                    "description": "accept (同意), reject (拒绝), ignore (忽略)",
                    "enum": ["accept", "reject", "ignore"],
                    "default": "ignore"
                }
            },
            "required": ["enabled", "action"]
        },
        "admin_qq": {
            "type": "integer",
            "title": "管理员QQ号 (用于通知)",
            "description": "如果配置，处理结果会私聊通知此QQ号，0表示不通知。",
            "default": 0
        }
    },
    "required": ["friend_request", "group_invite"]
}
